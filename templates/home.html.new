{% extends 'base.html' %}

{% block title %}Botanica - Your Irish Plant Shop{% endblock %}

{% block content %}
<!-- Hero Section -->
<section class="hero-section">
    <div class="container-fluid p-0">
        <div class="position-relative">
            <img src="https://images.unsplash.com/photo-1466781783364-36c955e42a7f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2071&q=80" class="img-fluid w-100" style="max-height: 600px; object-fit: cover;" alt="Beautiful plants">
            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background-color: rgba(0, 0, 0, 0.4);">
                <div class="container text-white">
                    <div class="row">
                        <div class="col-md-8 col-lg-6">
                            <h1 class="display-4 fw-bold mb-4">Bring Nature Home</h1>
                            <p class="lead mb-4">Discover our collection of premium plants, carefully selected for Irish homes and gardens.</p>
                            <a href="/products/" class="btn btn-success btn-lg">Shop Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Categories -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Shop by Category</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <img src="https://images.unsplash.com/photo-1545165375-1b744b9ed444?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80" class="card-img-top" alt="Indoor Plants" style="height: 250px; object-fit: cover;">
                    <div class="card-body text-center">
                        <h5 class="card-title">Indoor Plants</h5>
                        <p class="card-text">Perfect for brightening up your home and improving air quality.</p>
                        <a href="/products/?category=indoor" class="btn btn-outline-success">View Indoor Plants</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <img src="https://images.unsplash.com/photo-1599685315640-4a8c7ab8dc9c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80" class="card-img-top" alt="Outdoor Plants" style="height: 250px; object-fit: cover;">
                    <div class="card-body text-center">
                        <h5 class="card-title">Outdoor Plants</h5>
                        <p class="card-text">Hardy varieties that thrive in the Irish climate.</p>
                        <a href="/products/?category=outdoor" class="btn btn-outline-success">View Outdoor Plants</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <img src="https://images.unsplash.com/photo-1509423350716-97f9360b4e09?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1169&q=80" class="card-img-top" alt="Succulents" style="height: 250px; object-fit: cover;">
                    <div class="card-body text-center">
                        <h5 class="card-title">Succulents</h5>
                        <p class="card-text">Low-maintenance plants perfect for beginners and busy people.</p>
                        <a href="/products/?category=succulents" class="btn btn-outline-success">View Succulents</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Products -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Featured Plants</h2>
        <div class="row g-4">
            {% for i in "12345" %}
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="badge bg-success position-absolute top-0 end-0 m-2">New</div>
                    <img src="https://images.unsplash.com/photo-1614594975525-e45190c55d0b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=764&q=80" class="card-img-top" alt="Featured Plant" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">Monstera Deliciosa</h5>
                        <p class="text-muted">Indoor Plant</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 mb-0">€24.99</span>
                            <div>
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star-half-alt text-warning"></i>
                                <span class="small text-muted">(4.5)</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <div class="d-grid">
                            <a href="/products/1/" class="btn btn-outline-success">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="text-center mt-4">
            <a href="/products/" class="btn btn-success">View All Plants</a>
        </div>
    </div>
</section>

<!-- Benefits Section -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Why Choose Botanica?</h2>
        <div class="row g-4">
            <div class="col-md-3 text-center">
                <div class="mb-3">
                    <i class="fas fa-truck text-success fa-3x"></i>
                </div>
                <h5>Free Delivery</h5>
                <p class="text-muted">On orders over €50 throughout Ireland</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="mb-3">
                    <i class="fas fa-leaf text-success fa-3x"></i>
                </div>
                <h5>Healthy Plants</h5>
                <p class="text-muted">Grown with care in our Irish nurseries</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="mb-3">
                    <i class="fas fa-shield-alt text-success fa-3x"></i>
                </div>
                <h5>Plant Guarantee</h5>
                <p class="text-muted">30-day plant health guarantee</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="mb-3">
                    <i class="fas fa-headset text-success fa-3x"></i>
                </div>
                <h5>Expert Support</h5>
                <p class="text-muted">Plant care advice from our specialists</p>
            </div>
        </div>
    </div>
</section>

<!-- Newsletter Section -->
<section class="py-5 bg-success text-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h3>Join Our Newsletter</h3>
                <p>Subscribe to receive plant care tips, exclusive offers, and updates on new arrivals.</p>
            </div>
            <div class="col-md-6">
                <form class="row g-3">
                    <div class="col-8">
                        <input type="email" class="form-control" placeholder="Your email address">
                    </div>
                    <div class="col-4">
                        <button type="submit" class="btn btn-light w-100">Subscribe</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- Custom CSS for the homepage -->
<style>
    .hero-section {
        margin-top: -1.5rem;
    }
    
    @media (min-width: 992px) {
        .hero-section h1 {
            font-size: 3.5rem;
        }
    }
</style>
{% endblock %}
